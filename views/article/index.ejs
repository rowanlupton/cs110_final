<%include top%>
	<div class="index">
		<div class="container-fluid">
			<div class="row-fluid">
				<div id="articleList" class="col-md-8">
					<h1>Articles</h1>
					<ul>
						<% articles.forEach(function(article) { %>
							<li>
								<a href="/articles/<%=article.id%>"><%=article.title%></a>
							</li>
						<% }); %>
					</ul>
				</div><!--articleList-->
				<div id="tagsList" class="col-md-4">
					<h1>Tags</h1>
					<ul>
					<% tags.forEach(function(tag) { %>
						<li>
						<a href="/articles/tags/<%=tag.id%>"><%=tag.name%></a>
						</li>
					<% }); %>
					</ul>
				</div>
			</div>
		</div>

		<hr>

		<div class="meta">
			<div id="newPostLink">
				<a href="/articles/new" class="btn btn-default">new post</a>
			</div><!--newPostLink-->
		</div><!--meta-->
	</div> <!--index-->
<%include bottom%>